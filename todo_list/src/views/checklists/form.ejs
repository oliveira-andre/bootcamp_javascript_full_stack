<form method="post" action="<%= url %>">
  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" name="checklist[name]" placeholder="Lista de Tarefas"
        value="<%= checklist.name %>">
      <% if(checklist.errors) { %>
      <p class="is-danger help"><%= checklist.errors.name.message %></p>
      <% } %>
    </div>
  </div>

  <button type="submit" class="button is-success">Save</button>
  <a href="/checklists" class="button">Cancel</a>
</form>